





<!-- Trong search.hbs -->
<form method="GET" action="/search">
    <input type="text" name="q" placeholder="Tìm kiếm theo tên sản phẩm...">
    <button type="submit">Tìm kiếm</button>
</form>

<h2>Kết quả tìm kiếm:</h2>

  
<div class="mt-4">
    <div class="row">
    {{#each dienthoais}}
    <div class="product1">
        <div class="product-toyota">

            <div class="product-toyotaxe">
                <div class="product-item1 product-xe">

                    <div class="productvios">


                        <div class="product-item">

                          <a href="/dienthoais/{{this.slug}}">             {{!--  sang trang chi tiết ( show.ejs )  --}}
                                <div class="image">
                                    <img style="weight:200px;height:170px" src="/uploads/{{this.image}}" alt="">
                                </div>
                            </a>
                            <div class="product-title">
                                <h3 style="margin-top:-10px">{{this.name}}</h3>

                                <del>{{this.GiaCu}}<u>đ</u></del>
                                <span>{{this.GiaMoi}} <u>đ</u></span>
                                <a style="margin-top:15px;margin-left:90px;" href="#" class="product_add_cart"> THÊM GIỎ HÀNG </a>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>
    {{/each}}
   </div>
</div>