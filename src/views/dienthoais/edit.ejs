<div class="mt-4">
    <h3>Cập nhật  </h3>
    <form class="mt-4" method="POST" action="/dienthoais/{{dienthoai._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên </label>
            <input type="text" class="form-control" value="{{dienthoai.name}}" id="name" name="name">
        </div>
         <div class="form-group">
            <label for="ThongTin">Mô tả</label>
            <input type="text" class="form-control" id="ThongTin" name="ThongTin">
        </div>
        <div class="form-group">
            <label for="image">Ảnh</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>
        <div class="form-group">
            <label for="GiaCu">Giá cũ </label>
            <input type="text" class="form-control" id="GiaCu" name="GiaCu">
        </div>
          <div class="form-group">
            <label for="GiaMoi">Giá Mới </label>
            <input type="text" class="form-control" id="GiaMoi" name="GiaMoi">
        </div>
          <div class="form-group">
            <label for="HangSX">Hãng sản xuất </label>
            <input type="text" class="form-control" id="HangSX" name="HangSX">
        </div>
        <div class="form-group">
            <label for="level">LINK PHIM </label>
            <input type="text" class="form-control" value="{{dienthoai.slug}}" id="slug" name="slug">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>